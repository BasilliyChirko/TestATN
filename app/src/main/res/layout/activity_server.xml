<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".server.ServerActivity">

    <TextView
        android:id="@+id/server_label_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ip address" />

    <TextView
        android:id="@+id/server_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/server_label_ip"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ip sfeef" />

    <TextView
        android:id="@+id/selected_dir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@id/select_dir"
        app:layout_constraintEnd_toStartOf="@id/select_dir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/select_dir" />

    <Button
        android:id="@+id/select_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/select_dir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/server_label_ip" />

    <Button
        android:id="@+id/submit_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="12dp"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_dir" />

    <TextView
        android:id="@+id/loading_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/loading_progress"
        app:layout_constraintEnd_toStartOf="@id/submit_server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/submit_server"
        tools:text="fsefse" />

    <TextView
        android:id="@+id/loading_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/submit_server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_file_name"
        tools:text="fsefse" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_margin="16dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/loading_progress"
        app:layout_constraintEnd_toStartOf="@+id/submit_server"
        app:layout_constraintStart_toEndOf="@+id/loading_progress"
        app:layout_constraintTop_toTopOf="@+id/loading_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>